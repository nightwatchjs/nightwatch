{
  "src_folders": ["../sampletests"],
  "output_folder": "./output",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "globals_path": "./globals.js",
  "test_workers": {
    "enabled": false
  },
  "output": false,

  "webdriver": {
