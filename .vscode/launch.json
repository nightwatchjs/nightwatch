  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Nightwatch",
      "program": "${workspaceFolder}/bin/nightwatch",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "${workspaceFolder}/examples/tests/ecosia.js",
        "--env",
        "chrome",
        "--verbose"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "type": "pwa-node"
    },
    {
      "name": "Run on Browserstack",
      "program": "${workspaceFolder}/bin/nightwatch",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "${workspaceFolder}/examples/tests/ecosia.js",
        "--env",
        "browserstack.chrome",
        "--verbose"
      ],
      "envFile": "${workspaceFolder}/browserstack.env",
      "internalConsoleOptions": "openOnSessionStart",
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Run Mocha Tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--slow",
        "5000",
        "--colors",
        "${workspaceFolder}/test/src/**/*.js",
      ],
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "internalConsoleOptions": "openOnSessionStart",
    }
  ]
}
